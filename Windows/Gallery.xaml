<Window x:Class="UserData.Windows.Gallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserData.Windows"
        mc:Ignorable="d"
        Title="Gallery" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="740"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Button x:Name="Left" Content="&lt;&lt;" Click="LeftBtn_Click"  Grid.Column="0"/>
        <Button x:Name="Right" Content=">>" Click="RightBtn_Click" Grid.Column="2"/>
        <Button x:Name="Ava" Content="Установить в качестве аватара" Click="Ava_Click"  Grid.Column="1" Grid.Row="1"/>
        <Image x:Name="ImgUserPic" Grid.Row="0" Grid.Column="1"/>
    </Grid>
</Window>
